<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.NewUser"
    tools:layout_editor_absoluteX="18dp"
    tools:layout_editor_absoluteY="-102dp">

    <Button
        android:id="@+id/button_connecter_nv_user"
        android:layout_width="199dp"
        android:layout_height="60dp"
        android:fontFamily="@font/dm_sans"
        android:text="@string/texte_bouton_nv_client"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_admin_nv_user"
        app:layout_constraintVertical_bias="0.345" />

    <EditText
        android:id="@+id/login_nv_user"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:autofillHints="username"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texte_login_nv_user"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/texte_login_nv_user"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:fontFamily="@font/dm_sans"
        android:labelFor="@id/login_nv_user"
        android:text="@string/text_login_new_user"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texte_titre_nv_user"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/texte_titre_nv_user"
        android:layout_width="211dp"
        android:layout_height="36dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/dm_sans"
        android:text="@string/title_activity_new_user"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_admin_nv_user"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginBottom="144dp"
        android:fontFamily="@font/dm_sans"
        android:text="@string/mode_administrateur_nv_user"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.513" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="149dp"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/dm_sans"
        android:justificationMode="inter_word"
        android:text="@string/text_descriptor_new_user"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_nv_user"
        app:layout_constraintVertical_bias="0.709" />

</androidx.constraintlayout.widget.ConstraintLayout>